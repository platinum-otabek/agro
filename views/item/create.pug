extends ../layout 
block content
    form.form-horizontal(action='/item/create' method='POST')
        .form-group
            label.control-label.col-sm-2(for='name') Mahsulot Nomi:
            .col-sm-8
                input#name.form-control(type='text',required name='name' placeholder='mahsulot nomini kiriting')
        .form-group
            label.control-label.col-sm-2(for='price') Mahsulot Narxi:
            .col-sm-8
                input#price.form-control(type='number',required name='price' placeholder='mahsulot narxini kiriting')

        .form-group
            label.control-label.col-sm-2(for='unit') Mahsulot birligi:
            .col-sm-8
                select#unit.form-control(name="unit")
                    option(value="kg")|kg
                    option(value="dona")|dona
        input(type="hidden" class='token' name='token')                   
        .form-group
            .col-sm-offset-2.col-sm-10
                button.btn.btn-default(type='submit') Kiritish
    script. 
        var token = !{JSON.stringify(token)};

append javascripts
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    script(src="/javascripts/token.js")  

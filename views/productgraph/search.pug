extends ../layout
block content
    title=title
    form(action="/productgraph", method="post")
        .form-group
            label.control-label.col-sm-3(for='begin') Boshlang`ich vaqt:
            .col-sm-9
                input#begin.form-control(type='date',required name='begin' )
        .form-group
            label.control-label.col-sm-3(for='finish') Tugash vaqti:
            .col-sm-9
                input#finish.form-control(type='date',required name='finish')
        input(type="hidden" class='token' name='token')
        if user
            if user.status != 'admin'
                .form-group
                    label.control-label.col-sm-3(for='hudud') Hudud:
                    .col-sm-9
                        select#hudud(name="hudud")
                            each branch in branches
                                option(value= branch.name) #{branch.name}
        .form-group
            .col-sm-offset-3.col-sm-9
                input.btn.btn-default(type='submit' value='Natijalarni ko`rsatish')
    script.
        var token = !{JSON.stringify(token)};

append javascripts
    script(src="/javascripts/token.js")

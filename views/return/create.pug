extends ../layout
block content
    form.form-horizontal(action='/branch/item/create' method='POST')
        input(type="hidden" class="token" name='token' )
        .form-group
            label.control-label.col-sm-2(for='name') Mahsulot Nomi:
            .col-sm-8
                input#name.form-control(type='text',required name='name' placeholder='mahsulot nomini kiriting')
        .form-group
            label.control-label.col-sm-2(for='shtrix') Mahsulot Shtrix kodi:
            .col-sm-8
                input#shtrix.form-control(type='number', name='shtrix_id' placeholder='mahsulot shtrix kodini kiriting')
        .form-group
            label.control-label.col-sm-2(for='price') Mahsulot narxi:
            .col-sm-8
                input#price.form-control(type='number',required name='price' placeholder='mahsulot narxini kiriting')

        .form-group
                label.control-label.col-sm-2(for='amount') Mahsulot miqdori:
                .col-sm-8
                    input#amount.form-control(type='number',required name='amount' placeholder='mahsulot miqdorini kiriting')

        .form-group
            .col-sm-offset-2.col-sm-10
                button.btn.btn-default(type='submit') Kiritish
append javascripts
    script. 
        var token = !{JSON.stringify(token)};
    script(src="/javascripts/token.js")
